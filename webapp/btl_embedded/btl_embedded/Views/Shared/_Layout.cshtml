@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BTL_HTN</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/bootstrap-5.0.2/dist/css/bootstrap.min.css">
    <link href="~/font/fontawesome-free-5.15.4-web/css/all.css" rel="stylesheet">
    <script defer src="~/font/fontawesome-free-5.15.4-web/js/all.js"></script>
    <link href="~/font/fontawesome-free-5.15.4-web/css/fontawesome.css" rel="stylesheet">
    <link href="~/font/fontawesome-free-5.15.4-web/css/brands.css" rel="stylesheet">
    <link href="~/font/fontawesome-free-5.15.4-web/css/solid.css" rel="stylesheet">
    <link href="~/Home/htgtncss.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/demo.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/paho-mqtt/1.0.1/mqttws31.min.js" type="text/javascript"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BTL_HTN</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-itemR">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-itemR">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Main" asp-action="Statistics">Thống kê</a>
                        </li>
                        <li class="nav-itemR">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Main" asp-action="Assess">Đánh giá</a>
                        </li>
                        <li class="nav-itemR">
                            <a class="nav-link text-dark" id="myAcc" asp-area="" asp-controller="Main" asp-action="Account">Tài khoản</a>
                        </li>
                    </ul>
                </div>
                <div style="margin-right:50px">
                    <form action="/form/submit" method="GET" style="display:flex">
                        <input type="text" name="text" class="search" placeholder="Search here!">
                        <input type="submit" name="submit" class="submit" value="Search">
                    </form>
                </div>
                <a>
                    @if (Context.Session.GetString("AvtUser") == null || Context.Session.GetString("AvtUser") == "")
                    {
                        <img src="~/Home/avt.png" style="width:36px;height:36px;border-radius:50%;margin-left:-8px;margin-top:-3px;" />
                    }
                    else
                    {
                        <img src="@Context.Session.GetString("AvtUser")" style="width:36px;height:36px;border-radius:50%;margin-left:-8px;margin-top:-3px;" />
                    }

                </a>
                <ul id="menu_nav">
                    <li id="mainli">
                        <i class="fas fa-caret-square-down"></i>
                        <ul id="submenu">
                            <li> <a href="">Setting</a> </li>
                            <li><a asp-area="" asp-controller="Login" asp-action="Login">Logout</a></li>
                        </ul>
                    </li>


                </ul>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted" style="margin-top:100px">
            <div class="container">
                &copy; 2021 - BTL_HTN - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/bootstrap-5.0.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
